<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/inside.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,300&family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,300&family=Roboto:ital,wght@0,300;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Birthstone&display=swap" rel="stylesheet">

    
    <title>Inicio</title>
</head>
<body>
    
    <h5>
        Tabla Usuarios
    </h5>
    <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">DNI</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Contrase単a</th>
            <th scope="col">Tipo</th>
            <th scope="col">Apellido</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de Nacimiento</th>
            <th scope="col">Telefono</th>
            <th scope="col">Verificado</th>
          </tr>
        </thead>
        <tbody>
            
            <% usuarios.forEach(element => { %>
                <tr>
                    <td><%= element.idusuario %> </td>
                    <td><%= element.DNI %> </td>
                    <td><%= element.correo %> </td>
                    <td><%= element.contrase単a %> </td>
                    <td><%= element.tipo %> </td>
                    <td><%= element.apellido %> </td>
                    <td><%= (element.nombre) %> </td>
                    <td><%= element.fecha %> </td>
                    <td><%= element.telefono %> </td>
                    <td><%= element.verificado %> </td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
      <div class="container">
        <div class="row align-items-start">
          <div class="col">
            <button  data-bs-toggle="modal" data-bs-target="#agregarusuario">Agregar Usuario</button>
          </div>
          <div class="col">
              <form action="/admin/eliminar/usuario" method="POST">
                <select class="form-select" name="id" aria-label="">
                  <option selected value="">Seleccionar Usuario</option>
                  <% usuarios.forEach(element => { %>
                    <option value="<%= element.idusuario  %> "><%= element.idusuario%></option>
                  <% }) %>
                </select>
                <button type="submit" class="btn btn-primary">Eliminar Usuario</button>
            </form>
          </div>
          <div class="col">
            <form action="/admin/verificar/usuario" method="POST">
              <select class="form-select" name="id" aria-label="">
                <option selected >Seleccionar Usuario</option>
                <% usuarios.forEach(element => { %>
                  <% if (element.verificado == "pr") { %>
                    <option value="<%= element.idusuario  %> "><%= element.idusuario  %> </option>
                  <% } %>
                  
                <% }) %>
              </select>
              <button type="submit" class="btn btn-primary">Verificar Usuario</button>
            </form>
          </div>
        </div>
      </div>
      <h5>


        Tabla Rubros
    </h5>
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>

          </tr>
        </thead>
        <tbody>
            
            <% rubros.forEach(element => { %>
                <tr>
                    <td><%= element.ID_Rubro %> </td>
                    <td><%= element.Nombre %> </td>

                  </tr>
            <% }) %>
        </tbody>
      </table>
      <div class="container">
        <div class="row align-items-start">
          <div class="col">
            <button  data-bs-toggle="modal" data-bs-target="#agregarrubro">Agregar Rubro</button>
          </div>
          <div class="col">
              <form action="/admin/eliminar/rubro" method="POST">
                <select class="form-select" name="id" aria-label="">
                  <option selected value="">Seleccionar Rubro</option>
                  <% rubros.forEach(element => { %>
                    <option value="<%= element.ID_Rubro  %> "><%= element.ID_Rubro  %> </option>
                  <% }) %>
                </select>
                <button type="submit" class="btn btn-primary">Eliminar Rubro</button>
            </form>
          </div>
        </div>
      </div>
      <br>
      <h5>
        Tabla SubRubros
    </h5>
      
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">ID del Rubro</th>
            <th scope="col">Nombre</th>

          </tr>
        </thead>
        <tbody>
            
            <% subrubros.forEach(element => { %>
                <tr>
                    <td><%= element.ID_SubRubro %> </td>
                    <td><%= element.ID_Rubro %> </td>
                    <td><%= element.Nombre %> </td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
      <div class="container">
        <div class="row align-items-start">
          <div class="col">
            <button data-bs-toggle="modal" data-bs-target="#agregarsubrubro">Agregar SubRubro</button>
          </div>
          <div class="col">
              <form action="/admin/eliminar/subrubro" method="POST">
                <select class="form-select" name="id" aria-label="">
                  <option selected value="">Seleccionar SubRubro</option>
                  <% subrubros.forEach(element => { %>
                    <option value="<%= element.ID_SubRubro  %> "><%= element.ID_SubRubro  %> </option>
                  <% }) %>
                </select>
                <button type="submit" class="btn btn-primary">Eliminar SubRubro</button>
            </form>
          </div>
        </div>
      </div>
      

  <!-- MODALES -->
  <div class="modal fade" id="agregarusuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Usuario</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/agregar/usuario" method="POST">
            <div class="div2InputsContainer">

                <div class="divInputPlusLabel">
                  <label for="">Nombre</label>
                  <input class="inputSignup" type="text" name="nombre" id=""  required>
                </div>
      
      
                <div class="divInputPlusLabel">
                  <label for="">Apellido</label>
                  <input class="inputSignup" type="text" name="apellido" id="apellido"  required>
                </div>
      
              </div>
      
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Correo Electronico</label>
                  <input class="inputSignup" type="text" name="correo" id=""  required>
                </div>
      
      
                <div class="divInputPlusLabel">
                  <label for="">DNI</label>
                  <input class="inputSignup" type="text" name="DNI" id=""  required>
                </div>
              </div>
      
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Contrase単a</label>
                  <input class="inputSignup" type="password" name="contrase単a" id=""  required>
                </div>
      
              </div>
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Rol</label>
                  <select name="tipo" id="">
                    <option value="solicitante" selected>Solicitante</option>
                    <option value="ofertante">Ofertante</option>
                    <option value="admin">Admin</option>
      
                  </select>
                  
                </div>
      
                <% const today=new Date(); %>
                  <% fechaMinima=today.getFullYear() + "-" + "0" + (today.getMonth() + 1) + "-" + today.getDate(); %>
      
                    <div class="divInputPlusLabel">
                      <label for="Fecha">Fecha de nacimiento</label>
                      <input type="date" id="date" name="fecha" value=<%=fechaMinima %>
                      min="1921-01-01" max= <%= fechaMinima %> >
      
      
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
              </div>

          </form>
      </div>
    </div>
  </div>
  </div>
  <div class="modal fade" id="agregarrubro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Rubro</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/agregar/rubro" method="POST">
            <div class="mb-3">
              <label for="" class="form-label">Nombre</label>
              <input type="text" name="Nombre" class="form-control" id="">
            </div>
            <button type="submit" class="btn btn-primary">Agregar Rubro</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="agregarsubrubro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Rubro</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/agregar/subrubro" method="POST">
            <div class="mb-3">
              <label for="" class="form-label">Rubro</label>
              <select name="ID_Rubro" id="">
                <% rubros.forEach(element => { %>
                  <option selected value="<%= element.ID_Rubro  %> "> <%= element.Nombre  %> </option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Nombre</label>
              <input type="text" name="Nombre" class="form-control" id="">
            </div>
            <button type="submit" class="btn btn-primary">Agregar SubRubro</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>
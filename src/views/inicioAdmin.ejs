<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/inside.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,300&family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;1,300&family=Roboto:ital,wght@0,300;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Birthstone&display=swap" rel="stylesheet">

    
    <title>Inicio</title>
</head>
<body>
    
    <h5>
        Tabla Usuarios
    </h5>
    <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">DNI</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Contraseña</th>
            <th scope="col">Tipo</th>
            <th scope="col">Apellido</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de Nacimiento</th>
            <th scope="col">Telefono</th>
          </tr>
        </thead>
        <tbody>
            
            <% usuarios.forEach(element => { %>
                <tr>
                    <td><%= element.idusuario %> </td>
                    <td><%= element.DNI %> </td>
                    <td><%= element.correo %> </td>
                    <td><%= element.contraseña %> </td>
                    <td><%= element.tipo %> </td>
                    <td><%= element.apellido %> </td>
                    <td><%= (element.nombre) %> </td>
                    <td><%= element.fecha %> </td>
                    <td><%= element.telefono %> </td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
      <button  data-bs-toggle="modal" data-bs-target="#agregarusuario">Agregar Usuario</button>
      <button>Eliminar Usuario</button>
      <br>
      <h5>
        Tabla Rubros
    </h5>
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
          </tr>
        </thead>
        <tbody>
            
            <% rubros.forEach(element => { %>
                <tr>
                    <td><%= element.ID_Rubro %> </td>
                    <td><%= element.Nombre %> </td>
                    <td><%= element.Descripcion %> </td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
      <button>Agregar Rubro</button>
      <button>Eliminar Rubro</button>
      <br>
      <h5>
        Tabla SubRubros
    </h5>
      
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">ID del Rubro</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
          </tr>
        </thead>
        <tbody>
            
            <% subrubros.forEach(element => { %>
                <tr>
                    <td><%= element.ID_SubRubro %> </td>
                    <td><%= element.ID_Rubro %> </td>
                    <td><%= element.Nombre %> </td>
                    <td><%= element.Descripcion %> </td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
      <button>Agregar SubRubro</button>
      <button>Eliminar SubRubro</button>

      <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ASD
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  <!-- MODALES -->
  <div class="modal fade" id="agregarusuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Usuario</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/agregar/usuario" method="POST">
            <div class="div2InputsContainer">

                <div class="divInputPlusLabel">
                  <label for="">Nombre</label>
                  <input class="inputSignup" type="text" name="nombre" id=""  required>
                </div>
      
      
                <div class="divInputPlusLabel">
                  <label for="">Apellido</label>
                  <input class="inputSignup" type="text" name="apellido" id="apellido"  required>
                </div>
      
              </div>
      
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Correo Electronico</label>
                  <input class="inputSignup" type="text" name="correo" id=""  required>
                </div>
      
      
                <div class="divInputPlusLabel">
                  <label for="">DNI</label>
                  <input class="inputSignup" type="text" name="DNI" id=""  required>
                </div>
              </div>
      
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Contraseña</label>
                  <input class="inputSignup" type="password" name="password" id=""  required>
                </div>
      
              </div>
              <div class="div2InputsContainer">
      
                <div class="divInputPlusLabel">
                  <label for="">Rol</label>
                  <!--<select name="tipo" id="">
                    <option value="solicitante" selected>Solicitante</option>
                    <option value="ofertante">Ofertante</option>
                    <option value="admin">Admin</option>
      
                  </select>-->
                  <input type="text" name="tipo" value="admin">
                </div>
      
                <% const today=new Date(); %>
                  <% fechaMinima=today.getFullYear() + "-" + "0" + (today.getMonth() + 1) + "-" + today.getDate(); %>
      
                    <div class="divInputPlusLabel">
                      <label for="Fecha">Fecha de nacimiento</label>
                      <input type="date" id="date" name="fecha" value=<%=fechaMinima %>
                      min="1921-01-01" max= <%= fechaMinima %> >
      
      
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
              </div>

          </form>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="agregarrol" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ASD
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>